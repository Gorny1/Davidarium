	FILE * fPtr;
	fPtr = fopen("file14.txt", "w");
	 if(fPtr == NULL)
    {
        //Nie udało się stworzyc pliku
        printf("Unable to create file :c \n");
        exit(EXIT_FAILURE);
        //To tyle

    }

  //Tworzenie losowych liczb
	const int low = 10;
    const int up = 99;

    char buffer[12];
    srand(time(0));

    char tab[9];
    int r_num;
    int i;

    for(i = 0 ; i<10; i++)
    {
        r_num = randomRange(low, up);
        printf("Generated number: %d\n", r_num);
     
	 //wrzucenie wygenerowanej liczby do pliku   
	  fputs(r_num, fPtr);
		tab[i] = r_num;
        
        
    }
  	
	  //Zapis do pliku
      
      fclose(fPtr);
      
	  printf("Plik utworzony, liczby zapisane \n");
	// End of tworzenie pliku

    return 0;
}

int randomRange(int lower, int upper)
{
    int num;
    num = (rand() % (upper - lower +1) + lower);
    return num;
    
}
